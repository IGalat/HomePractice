<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- lesson 2. singleton and prototype test. singleton is default scope -->
    <bean id="HW_2.1" class="tutorialsPoint._2_scopes.App">
        <property name="message" value="Hello World 2.1"/>
    </bean>
    <bean id="HW_2.2" class="tutorialsPoint._2_scopes.App" scope="singleton">
        <property name="message" value="Hello World 2.2"/>
    </bean>
    <bean id="HW_2.3" class="tutorialsPoint._2_scopes.App" scope="prototype">
        <property name="message" value="Hello World 2.3"/>
    </bean>

</beans>